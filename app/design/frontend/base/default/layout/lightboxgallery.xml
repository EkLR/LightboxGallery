<layout>
    <catalog_product_view>
        <reference name="head">
            <block type="core/template" name="lightboxgallery_head" template="lightboxgallery/head.phtml" ifconfig="lightboxgallery/general/enabled"/>
            <action method="addJs" ifconfig="lightboxgallery/general/enabled"><script>lightbox.js</script></action>
            <action method="addCss" ifconfig="lightboxgallery/general/enabled"><stylesheet>css/lightbox.css</stylesheet></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="lightboxgallery/general/enabled"><template>lightboxgallery/media.phtml</template></action>
        </reference>
    </catalog_product_view>
    <review_product_list>
        <reference name="head">
            <block type="core/template" name="lightboxgallery_head" template="lightboxgallery/head.phtml" ifconfig="lightboxgallery/general/enabled"/>
            <action method="addJs" ifconfig="lightboxgallery/general/enabled"><script>lightbox.js</script></action>
            <action method="addCss" ifconfig="lightboxgallery/general/enabled"><stylesheet>css/lightbox.css</stylesheet></action>
        </reference>
        <reference name="product.info.media">
            <action method="setTemplate" ifconfig="lightboxgallery/general/enabled"><template>lightboxgallery/media.phtml</template></action>
        </reference>
    </review_product_list>
</layout>
